<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diabetik" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/base_orange</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="headline_1">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>

    <style name="headline_2">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>
    <style name="headline_3">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>

    <style name="body_text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chips">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>
    
    <style name="label">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/monochrome_gray</item>
    </style>

    <style name="widget_description">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">#6B6B6B</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rectangle_rounded</item>
    </style>


</resources>