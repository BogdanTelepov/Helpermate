<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diabetik" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_orange</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/base_orange</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="headline_1">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>

    <style name="headline_2">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>

    <style name="headline_3">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>

    <style name="headline_3_normal">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="body_text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chips">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/monochrome</item>
    </style>

    <style name="label">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/monochrome_gray</item>
    </style>

    <style name="widget_description">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">#6B6B6B</item>
    </style>


    <style name="active_widget_item">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="widget_history_item">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">#75757B</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rectangle_rounded</item>
    </style>

    <style name="TimePicker" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/base_orange</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">#FBFBFB</item>
        <item name="itemIconTint">@color/bottom_nav_view_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_view_item_color</item>
    </style>

    <style name="custom_floating_buttons">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/lato_bold</item>

    </style>

    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>

    </style>

    <style name="widget_card_view">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0dp</item>

    </style>


    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>